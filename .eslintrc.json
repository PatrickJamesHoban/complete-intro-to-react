{
  "extends": ["plugin:flowtype/recommended", "airbnb", "prettier", "prettier/react"],
  "plugins": ["flowtype", "prettier"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2016,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  // explains which global variables to NOT fail you on...
  "env": {
    "es6": true, // symbol for example
    "browser": true, // don't fail on 'window', 'document', etc.
    "node": true, // don't fail on process.env (only avail in node)
    "jest": true // tells eslint to ignore all the things jest testing injects
  }
}
